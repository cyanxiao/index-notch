{
  "manifest_version": 3,
  "name": "Index Notch",
  "description": "Keep and review your scroll location with a click",
  "version": "0.0",
  "icons": {
    "48": "../icons/bookmark-48.png",
    "96": "../icons/bookmark-96.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/index.png", "icons/index.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage"]
}
